
@{
    ViewBag.Title = "Loan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Loan</h2>

<div class="row">
    <div class="col-md-10">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Loan Details</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label>Loan Principal</label>
                    <div class="col-md-10">
                        <input type="text" id="LoanPrincipal" name="LoanPrincipal"
                               class="form-control" placeholder="Enter Loan Value" value="@ViewBag.Principal" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Loan Principal</label>
                    <div class="col-md-10">
                        <input type="text" id="PaymentYears" name="Payment"
                               class="form-control" placeholder="Enter Loan Value" value="@ViewBag.PaymentYears" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Calculate Loan" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
    <input type="text" 
           class="form-control" placeholder="Enter Loan Value" value="@ViewBag.Principal" />
    <input type="text" 
           class="form-control" placeholder="Enter Loan Value" value="@ViewBag.PaymentYears" />

</div>

